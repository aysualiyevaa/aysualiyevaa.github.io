{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Productivity index",
      "anchor": "start",
      "subtitle": "Index (2018 = 100) | Source: INEGI through ECO API",
      "fontSize": "18",
      "subtitleFontSize": "14",
      "color": "#162fbb",
      "subtitleColor": "#4f5aea"
    },
    "height": "450",
    "width": "250",
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
    "background": "#ffffff",
    "view": {
      "fill": "#ffffff",
      "strokeOpacity": 0
    },
    "data": {
      "url": "https://api.economicsobservatory.com/mex/prod?vega",
      "format": {
        "type": "json"
      }
    },
    "mark": {
      "type": "line",
      "color": "#040a83",
      "strokeWidth": "2"
    },
    "encoding": {
      "x": {
        "field": "date",
        "type": "temporal",
        "axis": {
          "title": "",
          "titleColor": "#127cb9",
          "grid": false
        }
      },
      "y": {
        "field": "value",
        "type": "quantitative",
        "axis": {
          "title": "",
          "titleColor": "#166999",
          "grid": false
        }
      }
    }
  }