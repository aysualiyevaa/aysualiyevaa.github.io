{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Grouped bar chart for electricity production across multiple years with scrolling for years.",
  "title": {
    "text": "Evolution of renewables and non-renewables electricity production in 4 Nordic Countries from 2010 to 2024",
    "color": "#013220",
    "subtitle": [
      "Country (x), Electricity Production (GWh) (y).",
      "Source: International Energy Agency"
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "fontSize": 16,
    "anchor": "middle",
    "align": "center",
    "font": "Arial"
  },
  "width": 800,
  "height": 400,
  "params": [
    {
      "name": "selectedYear",
      "value": 2010,
      "bind": {
        "input": "select",
        "options": [
          2010,
          2011,
          2012,
          2013,
          2014,
          2015,
          2016,
          2017,
          2018,
          2019,
          2020,
          2021,
          2022,
          2023,
          2024
        ],
        "name": "Year: "
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/aysualiyevaa/aysualiyevaa.github.io/refs/heads/main/electricity_renewable_data_january.csv"
  },
  "transform": [
    {
      "filter": "datum.YEAR == selectedYear"
    }
  ],
  "mark": {
    "type": "bar",
    "tooltip": true
  },
  "encoding": {
    "x": {
      "field": "COUNTRY",
      "type": "nominal",
      "axis": {
        "title": "Country",
        "labelAngle": 0
      }
    },
    "xOffset": {
      "field": "PRODUCT",
      "type": "nominal"
    },
    "y": {
      "field": "VALUE",
      "type": "quantitative",
      "axis": {
        "title": "Electricity Production (GWh)"
      }
    },
    "color": {
      "field": "PRODUCT",
      "type": "nominal",
      "scale": {
        "domain": ["Renewables", "Non-renewables"],
        "range": ["#d9d8d0", "#013220"]
      },
      "legend": {
        "title": "Sector"
      }
    },
    "tooltip": [
      {
        "field": "COUNTRY",
        "title": "Country"
      },
      {
        "field": "PRODUCT",
        "title": "Product"
      },
      {
        "field": "VALUE",
        "title": "Production (GWh)"
      }
    ]
  },
  "config": {
    "view": {
      "stroke": "transparent"
    },
    "axis": {
      "grid": false
    },
    "bar": {
      "width": 65
    }
  }
}
